<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora5.MainPage"
             BackgroundColor="White"
             Title="Calculadora">

    <StackLayout Padding="20">
        <Frame BackgroundColor="White"
           Padding="15" Margin="0,0,0,20">
            <Label x:Name="LblResult"
            Text="0"
               FontSize="60"
                   TextColor="Black"
               FontAttributes="Bold"
               HorizontalOptions="End"></Label>
        </Frame>
        <Grid VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--1 row-->

            <Button Grid.Row="0" 
            Grid.Column="0"
            Text="C"
                FontSize="Large"
                FontAttributes="None"
                CornerRadius="5"
                TextColor="#246ffe"
                BackgroundColor="#fff"
                x:Name="BtnClear"
                Clicked="BtnClear_Clicked"
                BorderColor="#fff"/>
            <Button Grid.Row="0" 
            Grid.Column="1"
            Text="X"
                FontSize="Large"
                FontAttributes="None"
BorderColor="#fff"
CornerRadius="5"
TextColor="#246ffe"
BackgroundColor="#fff"
                x:Name="BtnX"
                Clicked="BtnX_Clicked"/>
            <Button Grid.Row="0" 
            Grid.Column="2"
            Text="%"
                FontSize="Large"
                FontAttributes="None"
BorderColor="#fff"
CornerRadius="5"
TextColor="#246ffe"
BackgroundColor="#fff"
                x:Name="BtnPercentage"
                Clicked="BtnPercentage_Clicked"/>
            <Button Grid.Row="0" 
            Grid.Column="3"
            Text="/"
                FontSize="Large"
               FontAttributes="None"
BorderColor="#fff"
CornerRadius="5"
TextColor="#246ffe"
BackgroundColor="#fff"
                Clicked="BtnCommonOperation_Clicked"/>

            <!--2 no row-->
            <Button 
            Grid.Row="1" 
            Grid.Column="0"
            Text="1"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"

            x:Name="BtnOne"
            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="1" 
            Grid.Column="1"
            Text="2"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"
            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="1" 
            Grid.Column="2"
            Text="3"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"

            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="1" 
            Grid.Column="3"
            Text="*"
            FontSize="Large"
           FontAttributes="None"
BorderColor="#fff"
CornerRadius="5"
TextColor="#246ffe"
BackgroundColor="#fff"
            Clicked="BtnCommonOperation_Clicked"/>
            <!--3 no row-->
            <Button 
            Grid.Row="2" 
            Grid.Column="0"
            Text="4"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"

            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="2" 
            Grid.Column="1"
            Text="5"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"

            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="2" 
            Grid.Column="2"
            Text="6"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"

            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="2" 
            Grid.Column="3"
            Text="-"
            FontSize="Large"
            FontAttributes="None"
BorderColor="#fff"
CornerRadius="5"
TextColor="#246ffe"
BackgroundColor="#fff"
            Clicked="BtnCommonOperation_Clicked"/>
            <!--4 no row-->
            <Button 
            Grid.Row="3" 
            Grid.Column="0"
            Text="7"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"

            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="3" 
            Grid.Column="1"
            Text="8"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"

            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="3" 
            Grid.Column="2"
            Text="9"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"
            Clicked="BtnCommon_Clicked"/>
            <Button 
            Grid.Row="3" 
            Grid.Column="3"
            Grid.RowSpan="2"
            Text="+"
            FontSize="Large"
            FontAttributes="Bold"
            BorderColor="#246ffe"
CornerRadius="15"
TextColor="White"
BackgroundColor="#246ffe"
            Clicked="BtnCommonOperation_Clicked"/>
            <!--5 no row-->
            <Button 
            Grid.Row="4" 
            Grid.Column="0"
            Text="."
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"
            Clicked="BtnCommon_Clicked"/>

            <Button 
            Grid.Row="4" 
            Grid.Column="1"
            Text="0"
            FontSize="Large"
            FontAttributes="None"
  BorderColor="Black"
     CornerRadius="5"
     TextColor="Black"
     BackgroundColor="White"
            Clicked="BtnCommon_Clicked"/>

            <Button 
            Grid.Row="4" 
            Grid.Column="2"
            Text="="
            FontSize="Large"
            FontAttributes="None"
BorderColor="#246ffe"
CornerRadius="5"
TextColor="#fff"
BackgroundColor="#246ffe"
            Clicked="BtnEqual_Clicked"/>

        </Grid>



    </StackLayout>
</ContentPage>
